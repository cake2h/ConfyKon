# Режим работы (test/production)
YOOKASSA_MODE=test

# Shop ID (идентификатор магазина)
YOOKASSA_SHOP_ID=1135991

# Secret Key (секретный ключ)
YOOKASSA_SECRET_KEY=secret

# Валюта по умолчанию
YOOKASSA_CURRENCY=RUB

# URL для webhook уведомлений
YOOKASSA_WEBHOOK_URL=/api/yookassa/webhook

# Включить webhook уведомления
YOOKASSA_WEBHOOK_ENABLED=true

# Включить возвраты
YOOKASSA_REFUNDS_ENABLED=true

# Тестовые данные (для режима test)
YOOKASSA_TEST_SHOP_ID=your_test_shop_id_here
YOOKASSA_TEST_SECRET_KEY=your_test_secret_key_here 
